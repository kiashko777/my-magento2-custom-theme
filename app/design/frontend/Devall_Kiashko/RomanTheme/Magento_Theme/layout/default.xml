<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <move element="navigation.sections" destination="header-wrapper"/>
        <move element="some.container" destination="header-wrapper"/>
        <move element="some.container2" destination="footer-container" before="-"/>
        <move element="form.subscribe" destination="some.container2"/>
        <move element="minicart" destination="header.panel" before="-"/>
        <referenceBlock name="header.panel">
            <block class="Magento\Framework\View\Element\Html\Link" name="custom-header-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Choose Language</argument>
                    <argument name="path" xsi:type="string">*/*/*</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Text" name="footer_links_title" before="-">
                <arguments>
                    <argument translate="true" name="text" xsi:type="string">
                        <![CDATA[<h4>My Account</h4>]]>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="footer_links-2">
            <block class="Magento\Framework\View\Element\Text" name="footer_links-2_title" before="-">
                <arguments>
                    <argument translate="true" name="text" xsi:type="string">
                        <![CDATA[<h4>Customers Services</h4>]]>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="footer_links-3">
            <block class="Magento\Framework\View\Element\Text" name="footer_links-3_title" before="-">
                <arguments>
                    <argument translate="true" name="text" xsi:type="string">
                        <![CDATA[<h4>Information</h4>]]>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
        <!--My custom container 1-->
        <container name="some.container" htmlClass="some-container" as="someContainer"
                   htmlTag="div"
                   label="Some Container">
            <block class="Magento\Framework\View\Element\Template" before="-" name="myview"
                   template="Magento_Theme::myview.phtml"/>
        </container>
        <!--My custom container 1-->
        <referenceContainer name="footer" label="Page Footer" htmlTag="div" htmlClass="footer content">
            <container name="some.container2" htmlClass="some-container2" as="someContainer2"
                       htmlTag="div"
                       label="Some Container">
                <block class="Magento\Framework\View\Element\Template" before="-" name="myview2"
                       template="Magento_Theme::myview2.phtml"/>
            </container>
            <container name="custom.container" as="customContainer" label="Custom Container" htmlTag="div"
                       before="footer.container" htmlClass="row"/>
            <block class="Magento\Framework\View\Element\Html\Links" name="footer_links-2">
                <arguments>
                    <argument name="css_class" xsi:type="string">footer links</argument>
                </arguments>
                <block class="Magento\Framework\View\Element\Html\Link\Current" name="help-shipping-link">
                    <arguments>
                        <argument name="label" xsi:type="string" translate="true">Help</argument>
                        <argument name="path" xsi:type="string">#</argument>
                    </arguments>
                </block>
                <block class="Magento\Framework\View\Element\Html\Link\Current" name="affiliates-link">
                    <arguments>
                        <argument name="label" xsi:type="string" translate="true">Affiliates</argument>
                        <argument name="path" xsi:type="string">#</argument>
                    </arguments>
                </block>
                <block class="Magento\Framework\View\Element\Html\Link\Current" name="group-sales-link">
                    <arguments>
                        <argument name="label" xsi:type="string" translate="true">Group sales</argument>
                        <argument name="path" xsi:type="string">#</argument>
                    </arguments>
                </block>
                <block class="Magento\Framework\View\Element\Html\Link\Current" name="news-sales-link">
                    <arguments>
                        <argument name="label" xsi:type="string" translate="true">News</argument>
                        <argument name="path" xsi:type="string">#</argument>
                    </arguments>
                </block>
                <block class="Magento\Framework\View\Element\Html\Link\Current" name="return-sales-link">
                    <arguments>
                        <argument name="label" xsi:type="string" translate="true">Return Policy</argument>
                        <argument name="path" xsi:type="string">#</argument>
                    </arguments>
                </block>
            </block>
            <block class="Magento\Framework\View\Element\Html\Links" name="footer_links-3">
                <arguments>
                    <argument name="css_class" xsi:type="string">footer links</argument>
                </arguments>
                <block class="Magento\Framework\View\Element\Html\Link\Current" name="new-link">
                    <arguments>
                        <argument name="label" xsi:type="string" translate="true">New Products</argument>
                        <argument name="path" xsi:type="string">#</argument>
                    </arguments>
                </block>
                <block class="Magento\Framework\View\Element\Html\Link\Current" name="top-link">
                    <arguments>
                        <argument name="label" xsi:type="string" translate="true">Top Sellers</argument>
                        <argument name="path" xsi:type="string">#</argument>
                    </arguments>
                </block>
                <block class="Magento\Framework\View\Element\Html\Link\Current" name="special-link">
                    <arguments>
                        <argument name="label" xsi:type="string" translate="true">Special Products</argument>
                        <argument name="path" xsi:type="string">#</argument>
                    </arguments>
                </block>
                <block class="Magento\Framework\View\Element\Html\Link\Current" name="supply-link">
                    <arguments>
                        <argument name="label" xsi:type="string" translate="true">Suppliers</argument>
                        <argument name="path" xsi:type="string">#</argument>
                    </arguments>
                </block>
                <block class="Magento\Framework\View\Element\Html\Link\Current" name="hot-link">
                    <arguments>
                        <argument name="label" xsi:type="string" translate="true">Hot Offers</argument>
                        <argument name="path" xsi:type="string">#</argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
